<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <!--
            Equivalent to:

            PS > & 'C:\Program Files\...\RemoveMSIX.ps1'

            - Single quotes for the path
            - ampersand for 'execute quoted string'
            - double quotes for the whole powershell 'command' arg
        -->
        <CustomAction
            Id="RemoveMSIX" 
            BinaryKey="WixCA" 
            DllEntry="WixQuietExec64"
            Execute="deferred" 
            Return="check" 
            Impersonate="yes"
        />
        <SetProperty
            Id="RemoveMSIX"
            Before="RemoveMSIX"
            Value="&quot;[POWERSHELLEXE]&quot; -NonInteractive -NoProfile -ExecutionPolicy bypass -Command &quot;&amp; '[#CM_FP_Installer.RemoveMSIX.ps1]'&quot;"
            Sequence="execute"
        />
    </Fragment>
</Wix>
