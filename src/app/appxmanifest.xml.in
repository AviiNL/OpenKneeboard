<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3"
  xmlns:uap7="http://schemas.microsoft.com/appx/manifest/uap/windows10/7"
  xmlns:uap8="http://schemas.microsoft.com/appx/manifest/uap/windows10/8"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities">
  <Identity
    Name="FredEmmott.Self.OpenKneeboard"
    Version="@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@.@VERSION_BUILD@"
    Publisher="CN=Frederick Emmott, O=Frederick Emmott, L=Austin, S=Texas, C=US"
    ProcessorArchitecture="x64"
  />
  <Properties>
    <DisplayName>OpenKneeboard</DisplayName>
    <PublisherDisplayName>Fred Emmott</PublisherDisplayName>
    <Description>An open source kneeboard</Description>
    <Logo>share\logo-44x44.png</Logo>
  </Properties>
  <Resources>
    <Resource Language="en-us" />
    <Resource uap:Scale="125"/>
    <Resource uap:Scale="150"/>
    <Resource uap:Scale="200"/>
    <Resource uap:Scale="400"/>
  </Resources>
  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="@MINIMUM_WINDOWS_VERSION@" MaxVersionTested="10.0.22000.739" />
    <PackageDependency Name="Microsoft.WindowsAppRuntime.1.1" MinVersion="1003.565.600.0" Publisher="CN=Microsoft Corporation, O=Microsoft Corporation, L=Redmond, S=Washington, C=US" />
  </Dependencies>
  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
  <Applications>
    <Application Id="OpenKneeboard" Executable="OpenKneeboardApp.exe" EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        BackgroundColor="#464646"
        DisplayName="OpenKneeboard"
        Square150x150Logo="share\logo-150x150.png"
        Square44x44Logo="share\logo-44x44.png"
        Description="An open source kneeboard"
      />
      <uap7:Properties>
        <uap8:ActiveCodePage>UTF-8</uap8:ActiveCodePage>
      </uap7:Properties>
      <Extensions>
        <uap3:Extension
          Category="windows.appExecutionAlias"
          EntryPoint="Windows.FullTrustApplication">
          <uap3:AppExecutionAlias>
            <desktop:ExecutionAlias Alias="OpenKneeboard.exe" />
          </uap3:AppExecutionAlias>
        </uap3:Extension>
      </Extensions>
    </Application>
  </Applications>
</Package>
